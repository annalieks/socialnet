<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.SocialNet" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/socialnet_blue_500</item>
        <item name="colorOnPrimary">@color/socialnet_yellow_500</item>
        <item name="colorPrimaryDark">@color/socialnet_blue_700</item>
        <item name="colorOnSurface">@color/socialnet_black</item>
        <item name="colorAccent">@color/socialnet_blue_700</item>
        <item name="colorSurface">@color/socialnet_gray_50</item>
        <item name="colorSecondary">@color/socialnet_yellow_500</item>
        <item name="android:colorBackground">@color/socialnet_blue_500</item>
    </style>

    <style name="Theme.SocialNet" parent="Base.Theme.SocialNet"/>

    <style name="Theme.SocialNet.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SocialNet.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="TextAppearance.SocialNet.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

</resources>